                        <Button
                            android:id="@+id/addAssignmentCancelButton"
                            style="@style/Button"
                            android:layout_width="100dp"
                            android:layout_height="35dp"
                            android:layout_alignStart="@+id/addAssignmentDividerView"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="30dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/done_button_background_pink"
