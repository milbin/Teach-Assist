<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="?Background"
>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?Background"
            android:fillViewport="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="?Background"
                android:gravity="top"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/LinearLayoutMarksView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="?Background"
                    android:gravity="top"
                    android:orientation="vertical">


                    <!--Average-->
                    <RelativeLayout

                        android:id="@+id/relativeLayoutAverage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:background="?Background"
                        android:paddingStart="50dp"
                        android:paddingEnd="50dp"
                        tools:context=".Average">


                        <io.netopen.hotbitmapgg.library.view.RingProgressBar
                            android:id="@+id/AverageBar"
                            android:layout_width="170dp"
                            android:layout_height="170dp"
                            android:layout_centerInParent="true"
                            android:minHeight="170dp"
                            app:max="101"
                            app:ringColor="?primaryColorDark"
                            app:ringDiameter="170"
                            app:ringProgressColor="?primaryPink"
                            app:ringWidth="5dp"
                            app:style="STROKE"
                            app:textColor="?primaryColor"
                            app:textIsShow="false"
                            app:textSize="26sp" />


                        <TextView
                            android:id="@+id/semesterAverageTV"
                            style="@style/Subtitle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text=""
                            android:textColor="?textColor"
                            android:textSize="22sp"
                            android:textStyle="bold" />


                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_marginTop="5dp">

                        <RelativeLayout
                            android:id="@+id/mark_bars"
                            android:layout_width="wrap_content"
                            android:layout_height="120dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp">

                            <RelativeLayout
                                android:id="@+id/BarAverage1"
                                android:layout_width="45dp"
                                android:layout_height="80dp"
                                android:layout_above="@+id/weightKAverage"
                                android:layout_marginStart="10dp"
                                android:background="@drawable/rounded_rectangle_bar_graph">

                                <TextView
                                    android:id="@+id/KpercentAverage"
                                    style="@style/Body2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:text=""
                                    android:textColor="?textColor" />

                                <TextView
                                    android:id="@+id/K"
                                    style="@style/Subtitle2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true"
                                    android:text="K"
                                    android:textColor="?textColor" />

                            </RelativeLayout>


                            <TextView
                                android:id="@+id/weightKAverage"
                                style="@style/Body2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignStart="@id/BarAverage1"
                                android:layout_alignEnd="@+id/BarAverage1"
                                android:layout_alignParentBottom="true"
                                android:layout_marginTop="2dp"
                                android:text="W:"
                                android:textAlignment="center"
                                android:textColor="?textColor"

                                />

                            <RelativeLayout
                                android:id="@+id/BarAverage2"
                                android:layout_width="45dp"
                                android:layout_height="80dp"
                                android:layout_above="@+id/weightTAverage"
                                android:layout_marginStart="3dp"
                                android:layout_toRightOf="@+id/BarAverage1"
                                android:background="@drawable/rounded_rectangle_bar_graph">

                                <TextView
                                    android:id="@+id/TpercentAverage"
                                    style="@style/Body2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:text=""
                                    android:textColor="?textColor" />

                                <TextView
                                    android:id="@+id/T"
                                    style="@style/Subtitle2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true"
                                    android:text="T"
                                    android:textColor="?textColor" />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/weightTAverage"
                                style="@style/Body2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignStart="@id/BarAverage2"
                                android:layout_alignEnd="@+id/BarAverage2"
                                android:layout_alignParentBottom="true"
                                android:layout_marginTop="2dp"
                                android:text="W:"
                                android:textAlignment="center"
                                android:textColor="?textColor"

                                />

                            <RelativeLayout
                                android:id="@+id/BarAverage3"
                                android:layout_width="45dp"
                                android:layout_height="80dp"
                                android:layout_above="@+id/weightCAverage"
                                android:layout_marginStart="3dp"
                                android:layout_toRightOf="@+id/BarAverage2"
                                android:background="@drawable/rounded_rectangle_bar_graph">

                                <TextView
                                    android:id="@+id/CpercentAverage"
                                    style="@style/Body2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:text=""
                                    android:textColor="?textColor" />

                                <TextView
                                    android:id="@+id/C"
                                    style="@style/Subtitle2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true"
                                    android:text="C"
                                    android:textColor="?textColor" />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/weightCAverage"
                                style="@style/Body2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignStart="@id/BarAverage3"
                                android:layout_alignEnd="@+id/BarAverage3"
                                android:layout_alignParentBottom="true"
                                android:layout_marginTop="2dp"
                                android:text="W:"
                                android:textAlignment="center"
                                android:textColor="?textColor"

                                />

                            <RelativeLayout
                                android:id="@+id/BarAverage4"
                                android:layout_width="45dp"
                                android:layout_height="80dp"
                                android:layout_above="@+id/weightAAverage"
                                android:layout_marginStart="3dp"
                                android:layout_toRightOf="@+id/BarAverage3"

                                android:background="@drawable/rounded_rectangle_bar_graph">

                                <TextView
                                    android:id="@+id/ApercentAverage"
                                    style="@style/Body2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:text=""
                                    android:textColor="?textColor" />

                                <TextView
                                    android:id="@+id/A"
                                    style="@style/Subtitle2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true"
                                    android:text="A"
                                    android:textColor="?textColor" />

                            </RelativeLayout>

                            <TextView
                                android:id="@+id/weightAAverage"
                                style="@style/Body2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignStart="@id/BarAverage4"
                                android:layout_alignEnd="@+id/BarAverage4"
                                android:layout_alignParentBottom="true"
                                android:layout_marginTop="2dp"
                                android:text="W:"
                                android:textAlignment="center"
                                android:textColor="?textColor"

                                />

                            <RelativeLayout
                                android:id="@+id/BarAverage5"
                                android:layout_width="45dp"
                                android:layout_height="80dp"
                                android:layout_above="@+id/weightOAverage"
                                android:layout_marginStart="3dp"
                                android:layout_marginEnd="10dp"
                                android:layout_toRightOf="@+id/BarAverage4"
                                android:background="@drawable/rounded_rectangle_bar_graph">

                                <TextView
                                    android:id="@+id/OpercentAverage"
                                    style="@style/Body2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:text=""
                                    android:textColor="?textColor" />

                                <TextView
                                    android:id="@+id/O"
                                    style="@style/Subtitle2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true"
                                    android:text="O"
                                    android:textColor="?textColor" />
                            </RelativeLayout>


                            <TextView
                                android:id="@+id/weightOAverage"
                                style="@style/Body2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignStart="@id/BarAverage5"
                                android:layout_alignEnd="@+id/BarAverage5"
                                android:layout_alignParentBottom="true"
                                android:layout_marginTop="2dp"
                                android:text="W:"
                                android:textAlignment="center"
                                android:textColor="?textColor"

                                />
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/addAssignmentButton"
                    android:layout_width="match_parent"
                    android:layout_height="145dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/button_bg_rectangle_solid"
                    android:visibility="invisible">

                    <RelativeLayout
                        android:id="@+id/plusIconRL"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true">

                        <ImageView
                            android:id="@+id/plusIcon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="40dp"
                            android:src="@drawable/plus_icon" />

                        <TextView
                            style="@style/Subtitle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/plusIcon"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="5dp"
                            android:text="Calculate New Assignment Mark"
                            android:textColor="?textColor" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/addAssignmentAllButtonsRL"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/addAssignmentTitle"
                            style="@style/Subtitle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="30dp"
                            android:text="Calculate New Assignment Mark"
                            android:textColor="?textColor" />

                        <EditText
                            android:id="@+id/addAssignmentTitleET"
                            style="@style/Body1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/addAssignmentTitle"
                            android:layout_marginStart="40dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="40dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/flush_rounded_courner"
                            android:hint="Assignment Title"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:textColor="?textColor"
                            android:textColorHint="?primaryColor"
                            android:textCursorDrawable="@null" />

                        <TextView
                            android:id="@+id/addAssignmentOverallMarkTV"
                            style="@style/Subtitle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/addAssignmentTitleET"
                            android:layout_alignStart="@id/addAssignmentTitleET"
                            android:layout_marginTop="10dp"
                            android:text="Overall Mark"
                            android:textColor="?textColor" />

                        <EditText
                            android:id="@+id/addAssignmentOverallMarkET"
                            style="@style/Body1"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/addAssignmentOverallMarkTV"
                            android:layout_alignStart="@+id/addAssignmentOverallMarkTV"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/flush_rounded_courner"
                            android:hint="Mark"
                            android:inputType="number|numberDecimal"
                            android:nextFocusDown="@id/addAssignmentOverallWeightET"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:textColor="?textColor"
                            android:textColorHint="?primaryColor"
                            android:textCursorDrawable="@null" />

                        <EditText
                            android:id="@+id/addAssignmentOverallWeightET"
                            style="@style/Body1"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/addAssignmentOverallMarkTV"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_toEndOf="@+id/addAssignmentOverallMarkET"
                            android:background="@drawable/flush_rounded_courner"
                            android:hint="Weight"
                            android:inputType="numberDecimal"
                            android:padding="10dp"
                            android:textColor="?textColor"
                            android:textColorHint="?primaryColor"
                            android:textCursorDrawable="@null" />

                        <View
                            android:id="@+id/addAssignmentDividerView"
                            android:layout_width="wrap_content"
                            android:layout_height="2dp"
                            android:layout_below="@+id/addAssignmentOverallMarkET"
                            android:layout_alignStart="@+id/addAssignmentTitleET"
                            android:layout_alignEnd="@+id/addAssignmentTitleET"
                            android:layout_marginTop="10dp"
                            android:background="?primaryColorDark" />

                        <TextView
                            android:id="@+id/addAssignmentAdvancedModeTV"
                            style="@style/Subtitle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/addAssignmentDividerView"
                            android:layout_alignStart="@+id/addAssignmentDividerView"
                            android:layout_marginTop="20dp"
                            android:paddingEnd="30dp"
                            android:text="Advanced Mode"
                            android:textColor="?textColor" />

                        <ImageView
                            android:id="@+id/addAssignmentAdvancedModeDropdownButton"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_below="@+id/addAssignmentDividerView"
                            android:layout_alignEnd="@+id/addAssignmentAdvancedModeTV"
                            android:layout_marginTop="18dp"
                            android:src="@drawable/arrow_up" />


                        <RelativeLayout
                            android:id="@+id/addAssignmentAdvancedModeRL"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/addAssignmentAdvancedModeTV"
                            android:layout_alignStart="@+id/addAssignmentDividerView"
                            android:layout_alignParentEnd="true"
                            android:visibility="gone">

                            <EditText
                                android:id="@+id/addAssignmentKMarkET"
                                style="@style/Body1"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginTop="20dp"
                                android:background="@drawable/flush_rounded_courner"
                                android:hint="Mark"
                                android:inputType="numberDecimal"
                                android:nextFocusDown="@id/addAssignmentKWeightET"
                                android:padding="10dp"
                                android:textColor="?textColor"
                                android:textColorHint="?primaryColor"
                                android:textCursorDrawable="@null" />

                            <EditText
                                android:id="@+id/addAssignmentKWeightET"
                                style="@style/Body1"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_marginStart="30dp"
                                android:layout_marginTop="20dp"
                                android:layout_toEndOf="@+id/addAssignmentKMarkET"
                                android:background="@drawable/flush_rounded_courner"
                                android:hint="Weight"
                                android:inputType="numberDecimal"
                                android:nextFocusDown="@id/addAssignmentTMarkET"
                                android:padding="10dp"
                                android:textColor="?textColor"
                                android:textColorHint="?primaryColor"
                                android:textCursorDrawable="@null" />

                            <TextView
                                style="@style/Body2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBaseline="@+id/addAssignmentKWeightET"
                                android:layout_marginStart="15dp"
                                android:layout_toEndOf="@+id/addAssignmentKWeightET"
                                android:text="(Knowledge)"
                                android:textColor="?textColor" />

                            <EditText
                                android:id="@+id/addAssignmentTMarkET"
                                style="@style/Body1"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/addAssignmentKMarkET"
                                android:layout_alignParentStart="true"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/flush_rounded_courner"
                                android:hint="Mark"
                                android:inputType="numberDecimal"
                                android:nextFocusDown="@id/addAssignmentTWeightET"
                                android:padding="10dp"
                                android:textColor="?textColor"
                                android:textColorHint="?primaryColor"
                                android:textCursorDrawable="@null" />

                            <EditText
                                android:id="@+id/addAssignmentTWeightET"
                                style="@style/Body1"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/addAssignmentKMarkET"
                                android:layout_marginStart="30dp"
                                android:layout_marginTop="10dp"
                                android:layout_toEndOf="@+id/addAssignmentTMarkET"
                                android:background="@drawable/flush_rounded_courner"
                                android:hint="Weight"
                                android:inputType="numberDecimal"
                                android:nextFocusDown="@id/addAssignmentCMarkET"
                                android:padding="10dp"
                                android:textColor="?textColor"
                                android:textColorHint="?primaryColor"
                                android:textCursorDrawable="@null" />

                            <TextView
                                style="@style/Body2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBaseline="@+id/addAssignmentTWeightET"
                                android:layout_marginStart="15dp"
                                android:layout_toEndOf="@+id/addAssignmentTWeightET"
                                android:text="(Thinking)"
                                android:textColor="?textColor" />

                            <EditText
                                android:id="@+id/addAssignmentCMarkET"
                                style="@style/Body1"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/addAssignmentTMarkET"
                                android:layout_alignParentStart="true"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/flush_rounded_courner"
                                android:hint="Mark"
                                android:inputType="numberDecimal"
                                android:nextFocusDown="@id/addAssignmentCWeightET"
                                android:padding="10dp"
                                android:textColor="?textColor"
                                android:textColorHint="?primaryColor"
                                android:textCursorDrawable="@null" />

                            <EditText
                                android:id="@+id/addAssignmentCWeightET"
                                style="@style/Body1"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/addAssignmentTMarkET"
                                android:layout_marginStart="30dp"
                                android:layout_marginTop="10dp"
                                android:layout_toEndOf="@+id/addAssignmentCMarkET"
                                android:background="@drawable/flush_rounded_courner"
                                android:hint="Weight"
                                android:inputType="numberDecimal"
                                android:nextFocusDown="@id/addAssignmentAMarkET"
                                android:padding="10dp"
                                android:textColor="?textColor"
                                android:textColorHint="?primaryColor"
                                android:textCursorDrawable="@null" />

                            <TextView
                                style="@style/Body2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBaseline="@+id/addAssignmentCWeightET"
                                android:layout_marginStart="15dp"
                                android:layout_toEndOf="@+id/addAssignmentCWeightET"
                                android:text="(Communication)"
                                android:textColor="?textColor" />

                            <EditText
                                android:id="@+id/addAssignmentAMarkET"
                                style="@style/Body1"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/addAssignmentCMarkET"
                                android:layout_alignParentStart="true"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/flush_rounded_courner"
                                android:hint="Mark"
                                android:inputType="numberDecimal"
                                android:nextFocusDown="@id/addAssignmentAWeightET"
                                android:padding="10dp"
                                android:textColor="?textColor"
                                android:textColorHint="?primaryColor"
                                android:textCursorDrawable="@null" />

                            <EditText
                                android:id="@+id/addAssignmentAWeightET"
                                style="@style/Body1"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/addAssignmentCMarkET"
                                android:layout_marginStart="30dp"
                                android:layout_marginTop="10dp"
                                android:layout_toEndOf="@+id/addAssignmentAMarkET"
                                android:background="@drawable/flush_rounded_courner"
                                android:hint="Weight"
                                android:inputType="numberDecimal"
                                android:nextFocusDown="@id/addAssignmentOMarkET"
                                android:padding="10dp"
                                android:textColor="?textColor"
                                android:textColorHint="?primaryColor"
                                android:textCursorDrawable="@null" />

                            <TextView
                                style="@style/Body2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBaseline="@+id/addAssignmentAWeightET"
                                android:layout_marginStart="15dp"
                                android:layout_toEndOf="@+id/addAssignmentAWeightET"
                                android:text="(Application)"
                                android:textColor="?textColor" />

                            <EditText
                                android:id="@+id/addAssignmentOMarkET"
                                style="@style/Body1"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/addAssignmentAMarkET"
                                android:layout_alignParentStart="true"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/flush_rounded_courner"
                                android:hint="Mark"
                                android:inputType="numberDecimal"
                                android:nextFocusDown="@id/addAssignmentOWeightET"
                                android:padding="10dp"
                                android:textColor="?textColor"
                                android:textColorHint="?primaryColor"
                                android:textCursorDrawable="@null" />

                            <EditText
                                android:id="@+id/addAssignmentOWeightET"
                                style="@style/Body1"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/addAssignmentAMarkET"
                                android:layout_marginStart="30dp"
                                android:layout_marginTop="10dp"
                                android:layout_toEndOf="@+id/addAssignmentOMarkET"
                                android:background="@drawable/flush_rounded_courner"
                                android:hint="Weight"
                                android:inputType="numberDecimal"
                                android:padding="10dp"
                                android:textColor="?textColor"
                                android:textColorHint="?primaryColor"
                                android:textCursorDrawable="@null" />

                            <TextView
                                style="@style/Body2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBaseline="@+id/addAssignmentOWeightET"
                                android:layout_marginStart="15dp"
                                android:layout_toEndOf="@+id/addAssignmentOWeightET"
                                android:text="(Other)"
                                android:textColor="?textColor" />
