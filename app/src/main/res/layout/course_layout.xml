<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/relativeLayout"
    android:clickable="true"
    android:focusable="true">
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg_rectangle_solid"
        android:minHeight="@dimen/Row_Height"
        android:layout_gravity="top"
        android:layout_marginTop="3dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="3dp"
        >

        <View
            android:id="@+id/offlineIndicator"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginTop="6dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="6dp"
            android:visibility="invisible"
            android:background="@drawable/offline_indicator_circle"/>

        <TextView
            android:id="@+id/Period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="top"
            android:textStyle="normal"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:text="Period 1"
            style="@style/Subtitle1"
            android:fontFamily="@font/gilroy_extrabold"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:textColor="?textColor"
            />
        <TextView
            android:id="@+id/RoomNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/Period"
            android:layout_toEndOf="@+id/Period"
            android:layout_toStartOf="@id/SubjectBar"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="5dp"
            android:textStyle="normal"
            style="@style/Subtitle2"
            android:textSize="12sp"
            android:text=""
            android:textColor="?textColor"
            />


        <io.netopen.hotbitmapgg.library.view.RingProgressBar
            android:id="@+id/SubjectBar"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/subjectArrow"
            android:layout_marginEnd="15dp"
            app:max="101"
            app:ringColor="?primaryColorDark"
            app:ringDiameter="110"
            app:ringProgressColor="?primaryGreen"
            app:ringWidth="5dp"
            app:style="STROKE"
            app:textColor="?primaryColor"
            app:textIsShow="false"
            app:textSize="16sp"
            />

        <TextView
            android:id="@+id/SubjectInt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignStart="@id/SubjectBar"
            android:layout_alignEnd="@id/SubjectBar"
            android:layout_marginStart="-20dp"
            android:layout_marginEnd="-20dp"
            style="@style/Subtitle1"
            android:text=""
            android:textAlignment="center"
            android:textColor="?textColor"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <ImageView
            android:id="@+id/subjectArrow"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/arrow_forward"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            />

        <TextView
            android:id="@+id/SubjectAbrv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/Period"
            android:layout_below="@+id/Period"
            android:layout_marginTop="3dp"
            android:layout_toStartOf="@id/SubjectBar"
            android:layout_marginEnd="15dp"
            android:text=""
            android:textColor="?textColor"
            android:textSize="14sp"
            style="@style/Body1"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/SubjectName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/SubjectAbrv"
            android:layout_marginTop="3dp"
            android:layout_alignStart="@id/SubjectAbrv"
            android:layout_toStartOf="@id/SubjectBar"
            android:layout_marginEnd="15dp"
            android:text=""
            android:textColor="?textColor"
            android:textSize="14sp"
            style="@style/Body1"
            />

        <ImageButton
            android:id="@+id/trash_can"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/delete_icon"
            android:background="@null"
            android:padding="5dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:contentDescription="provides ability to remove and expand assignment"
            android:visibility="gone"
            />

    </RelativeLayout>
</RelativeLayout>
