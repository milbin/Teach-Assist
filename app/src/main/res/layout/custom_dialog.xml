<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/adupdate"
        />
    <TextView
        android:id="@+id/TV1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_marginTop="0dp"
        style="@style/Subtitle1"
        android:textSize="18sp"
        android:textColor="@color/textColor"
        android:text="A message from the developpers:"
        android:textAlignment="center"
        />
    <TextView
        android:id="@+id/TV2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TV1"
        style="@style/Body1"
        android:layout_margin="16dp"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="13dp"
        android:text="Unfortunately, we've decided that the next step in improving our app is to show banner ads. It's a sad day in the history of Teachassist.
\n\n On the bright side, we wanted to soften the blow with a couple of new features: offline mode, and a statistics view. We also have a couple of other features that should arrive in the near future.
\n\n But for those of you who can't stand this development, we've included an option to remove all ads for $1.99.
\n\n Please accept our condolences, and we hope you enjoy :)"
        />
    <Button
        android:id="@+id/dialogButtonOK"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TV2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="Dismiss"
        style="@style/Subtitle1"
        android:textColor="?attr/textColor"
        android:background="@drawable/cancel_button_background"
        />
    <Button
        android:id="@+id/dialogButtonRate"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TV2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="Upgrade!"
        style="@style/Subtitle1"
        android:textColor="?attr/textColor"
        android:background="@drawable/upgrade_button_background"
        />
</RelativeLayout>