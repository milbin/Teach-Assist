<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/primaryPink</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>
    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#33333d</item>
        <item name="colorPrimaryDark">#27272f</item>
        <item name="primaryColor">#33333d</item>
        <item name="primaryColorDark">#27272f</item>
        <item name="toolbarColor">#27272f</item>
        <item name="primaryGreen">#045d56</item>
        <item name="primaryPink">#ff4181</item>
        <item name="Background">#33333d</item>
        <item name="textColor">#ffffff</item>
        <item name="unhighlightedTextColor">#484857</item>
        <item name="preferenceTheme">@style/preferenceTheme</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="selectableItemBackground">?android:selectableItemBackground</item>

    </style>
    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#ffffff</item>
        <item name="colorPrimaryDark">#e4e4eb</item>
        <item name="primaryColor">#ffffff</item>
        <item name="primaryColorDark">#e4e4eb</item>
        <item name="toolbarColor">#ffffff</item>
        <item name="primaryGreen">#37efba</item>
        <item name="primaryPink">#729fff</item>
        <item name="Background">#ffffff</item>
        <item name="textColor">#000000</item>
        <item name="unhighlightedTextColor">#e4e4eb</item>
        <item name="preferenceTheme">@style/preferenceTheme</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>
    <style name="preferenceTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">?primaryPink</item>
        <item name="colorPrimaryDark">?primaryColorDark</item>
        <item name="colorAccent">?primaryPink</item>
        <item name="android:textColorSecondary">?textColor</item>
        <item name="android:textColorPrimary">?textColor</item>
        <item name="colorControlNormal">?primaryPink</item>
        <item name="colorControlActivated">?primaryPink</item>
</style>
<style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
    <item name="spinBars">true</item>
    <item name="color">?textColor</item>
</style>


<!--Fonts-->
    <style name="AppTitle" parent="AppTheme"> // title
        <item name="android:fontFamily">@font/eczar_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="sandstoneBold" parent="AppTheme"> // none
        <item name="android:fontFamily">@font/sandstone_bold</item>
    </style>

    <style name="Title" parent="sandstoneBold"> // none
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ToolbarTitle" parent="sandstoneBold"> // subtitle
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/sandstone_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Subtitle1" parent="sandstoneBold"> // subheading1
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.035</item>
        <item name="android:textColor">#6a000000</item>
    </style>

    <style name="Subtitle2" parent="sandstoneBold"> // subheading2
        <item name="android:fontFamily">@font/sandstone_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.035</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="EditTextStyle" parent="sandstoneBold"> // none
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.17</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Button" parent="sandstoneBold"> // subheading1
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Body1" parent="sandstoneBold"> // heading
        <item name="android:fontFamily">@font/sandstone_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.0625</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Body2" parent="Body1"> // body
        <item name="android:letterSpacing">0.0625</item>
        <item name="android:textSize">12sp</item>
    </style>




</resources>
